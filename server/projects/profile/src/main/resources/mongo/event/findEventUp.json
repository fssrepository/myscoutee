[
    {
        "$match": {
            "type": "A",
            "members": {
                "$elemMatch": {
                    "profile.$id": "?#{#param.id}",
                    "status": "A"
                }
            }
        }
    },
    {
        "$match": {
            "$expr": {
                "$and": [
                    {
                        "$or": [
                            {
                                "$lt": [
                                    "$range.start",
                                    {
                                        "$toDate": "?#{#param.offset[0]}"
                                    }
                                ]
                            },
                            {
                                "$and": [
                                    {
                                        "$eq": [
                                            "$range.start",
                                            {
                                                "$toDate": "?#{#param.offset[0]}"
                                            }
                                        ]
                                    },
                                    {
                                        "$lt": [
                                            "$createdDate",
                                            {
                                                "$toDate": "?#{#param.offset[1]}"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "$in": [
                            "$status",
                            ":#{#status}"
                        ]
                    }
                ]
            }
        }
    },
    {
        "$sort": {
            "range.start": 1,
            "createdDate": -1
        }
    },
    {
        "$limit": "?#{#param.limit}"
    },
    {
        "$addFields": {
            "groupKey": {
                "$dateToString": {
                    "format": "?#{#param.groupKey}",
                    "date": "$range.start"
                }
            }
        }
    },
    {
        "$addFields": {
            "user": {
                "$first": {
                    "$filter": {
                        "input": "$members",
                        "as": "member",
                        "cond": {
                            "$and": [
                                {
                                    "$eq": [
                                        "$$member.profile.$id",
                                        "?#{#param.id}"
                                    ]
                                },
                                {
                                    "$eq": [
                                        "$$member.status",
                                        "A"
                                    ]
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    {
        "$replaceRoot": {
            "newRoot": {
                "$mergeObjects": [
                    {
                        "item": "$$ROOT"
                    },
                    {
                        "groupKey": "$groupKey",
                        "role": {
                            "$cond": [
                                {
                                    "$ifNull": [
                                        "$user",
                                        null
                                    ]
                                },
                                "$user.role",
                                null
                            ]
                        },
                        "isPromotion": {
                            "$cond": [
                                {
                                    "$ifNull": [
                                        "$ref",
                                        false
                                    ]
                                },
                                true,
                                false
                            ]
                        },
                        "sortKey": {
                            "$toLong": "$range.start"
                        },
                        "offset": [
                            "$range.start",
                            "$createdDate"
                        ]
                    }
                ]
            }
        }
    }
]