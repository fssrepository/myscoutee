[
        {
            "$match": {
                "$expr": {
                    "$and": [
                        { "$eq": [ "$group", "?0" ] },
                        { "$eq": [ "$status", "U" ] },
                        { "$gt": [ { "$ifNull": [ "$createdDate", "ISODate()" ] }, { "$toDate": ":#{#offset[0]}" } ] }
                    ]
                }
            }
        },
    
        {
            "$sort": {
                "createdDate": 1
            }
        },
    
        { "$limit": "?1" },
    
        {
            "$replaceRoot": {
                "newRoot": {
                    "$mergeObjects": [
                        { "event": "$$ROOT" },
                        { "sortKey": { "$toLong": "$createdDate" }, "offset": ["$createdDate"] }
                    ]
                }
            }
        }
    ]
    