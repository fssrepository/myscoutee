[
        {
            "$match": {
                "createdBy": "?0"
            }
        },
        {
            "$match": {
                "$expr": {
                    "$and": [
                        { "$gt": [{ "$ifNull": ["$createdDate", "ISODate()"] }, { "$toDate": ":#{#offset[0]}" }] }
                    ]
                }
            }
        },
        {
            "$sort": {
                "createdDate": 1
            }
        },
        {
            "$limit": "?1"
        },
        {
            "$replaceRoot": {
                "newRoot": {
                    "$mergeObjects": [
                        { "idea": "$$ROOT" },
                        { "groupKey": "$createdDate", "offset": ["$createdDate"] }
                    ]
                }
            }
        }
    ]
    