[
        {
            "$geoNear": {
                "near": "?1",
                "spherical": true,
                "minDistance": ":#{#offset[0]}",
                "distanceField": "distance",
                "distanceMultiplier": 0.001,
                "query": {
                    "_id": { "$nin": "?4" },
                    "type": "?0",
                    "system": false,
                    "visibility": "pu"
                }
            }
        },
        {
            "$match": {
                "$expr": {
                    "$and": [
                        { "$gt": [{ "$ifNull": ["$createdDate", "ISODate()"] }, { "$toDate": ":#{#offset[1]}" }] },
                        { "$gte": ["$distance", ":#{#offset[2]}"] }
                    ]
                }
            }
        },
        {
            "$addFields": {
                "groupKey": { "$multiply": [{ "$floor": [{ "$divide": ["$distance", "?3"] }] }, "?3"] }
            }
        },
        {
            "$sort": {
                "groupKey": 1,
                "distance": 1,
                "createdDate": -1
            }
        },
        {
            "$limit": "?2"
        },
        {
            "$replaceRoot": {
                "newRoot": {
                    "$mergeObjects": [
                        { "group": "$$ROOT" },
                        { "groupKey": "$groupKey", "offset": ["$groupKey", "$distance", "$createdDate"] }
                    ]
                }
            }
        }
    ]
    