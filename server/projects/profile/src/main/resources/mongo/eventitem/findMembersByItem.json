[
    {
        "$match": {
            "_id": ":#{#itemId}"
        }
    },
    {
        "$addFields": {
            "user": {
                "$first": {
                    "$filter": {
                        "input": "$members",
                        "as": "member",
                        "cond": {
                            "$and": [
                                {
                                    "$eq": [
                                        "$$member.profile.$id",
                                        "?#{#param.id}"
                                    ]
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    {
        "$unwind": {
            "path": "$members"
        }
    },
    {
        "$match": {
            "$expr": {
                "$and": [
                    {
                        "$in": [
                            "$members.status",
                            ":#{#status}"
                        ]
                    },
                    {
                        "$or": [
                            {
                                "$gt": [
                                    "$members.status",
                                    "?#{#param.offset[0]}"
                                ]
                            },
                            {
                                "$and": [
                                    {
                                        "$eq": [
                                            "$members.status",
                                            "?#{#param.offset[0]}"
                                        ]
                                    },
                                    {
                                        "$gt": [
                                            "$members.createdDate",
                                            {
                                                "$toDate": "?#{#param.offset[1]}"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    },
    {
        "$sort": {
            "members.status": 1,
            "members.createdDate": 1
        }
    },
    {
        "$limit": "?#{#param.limit}"
    },
    {
        "$replaceRoot": {
            "newRoot": {
                "$mergeObjects": [
                    {
                        "member": "$members"
                    },
                    {
                        "role": {
                            "$cond": [
                                {
                                    "$ifNull": [
                                        "$user",
                                        null
                                    ]
                                },
                                "$user.role",
                                null
                            ]
                        }
                    },
                    {
                        "offset": [
                            "$members.status",
                            "$members.createdDate"
                        ]
                    }
                ]
            }
        }
    }
]