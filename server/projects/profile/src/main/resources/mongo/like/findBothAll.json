[
    {
        "$match": {
            "$expr": {
                "$and": [
                    {
                        "$gt": [
                            "$cnt",
                            "?0"
                        ]
                    },
                    {
                        "$eq": [
                            "$type",
                            "P"
                        ]
                    }
                ]
            }
        }
    },
    {
        "$lookup": {
            "from": "profiles",
            "localField": "from.$id",
            "foreignField": "_id",
            "as": "profileFrom"
        }
    },
    {
        "$match": {
            "profileFrom.status": "A"
        }
    },
    {
        "$lookup": {
            "from": "profiles",
            "localField": "to.$id",
            "foreignField": "_id",
            "as": "profileTo"
        }
    },
    {
        "$match": {
            "profileTo.status": "A"
        }
    },
    {
        "$lookup": {
            "from": "likes",
            "localField": "cnt",
            "foreignField": "cnt",
            "as": "matchingItems"
        }
    },
    {
        "$match": {
            "matchingItems": {
                "$elemMatch": {
                    "type": "P",
                    "status": "P"
                }
            }
        }
    },
    {
        "$group": {
            "_id": "$cnt",
            "likes": {
                "$push": "$$ROOT"
            }
        }
    },
    {
        "$limit": "?1"
    }
]