[
    {
        "$match": {
            "$and": [
                {
                    "$or": [
                        {
                            "from": {
                                "$in": "?#{#likes.![from]}"
                            }
                        },
                        {
                            "to": {
                                "$in": "?#{#likes.![to]}"
                            }
                        }
                    ]
                },
                {
                    "ref": {
                        "$in": "?#{#likes.![ref]}"
                    }
                }
            ]
        }
    },
    {
        "$lookup": {
            "from": "likes",
            "localField": "cnt",
            "foreignField": "cnt",
            "as": "allLikes"
        }
    },
    {
        "$unwind": {
            "path": "$allLikes",
            "preserveNullAndEmptyArrays": true
        }
    },
    {
        "$group": {
            "_id": "$cnt",
            "likes": {
                "$push": "$$ROOT"
            }
        }
    }
]