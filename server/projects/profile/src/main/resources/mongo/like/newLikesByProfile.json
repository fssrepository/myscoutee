[
        {
            "$match": {
                "$expr": {
                    "$and": [
                        { "$eq": ["$to.$id", "?0"] },
                        { "$gt": ["$createdDate", { "$toDate": "?1" }] },
                        { "$eq": [{ "$ifNull": ["$ref", 0] }, 0] }
                    ]
                }
            }
        },
        { "$count": "games" },
        {
            "$replaceRoot": {
                "newRoot": {
                    "$mergeObjects": [{ "root": "games", "value": "$games" }]
                }
            }
        }
    ]
    