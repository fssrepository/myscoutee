[
    {
        "$match": {
            "$expr": {
                "$and": [
                    {
                        "$eq": [
                            "$group",
                            ":#{#groupId}"
                        ]
                    },
                    {
                        "$ne": [
                            "$_id",
                            "?#{#param.id}"
                        ]
                    }
                ]
            }
        }
    },
    {
        "$lookup": {
            "from": "groups",
            "let": {
                "g_id": "$group"
            },
            "pipeline": [
                {
                    "$match": {
                        "_id": "$$g_id"
                    }
                }
            ],
            "as": "group"
        }
    },
    {
        "$unwind": {
            "path": "$group"
        }
    },
    {
        "$match": {
            "$expr": {
                "$and": [
                    {
                        "$or": [
                            {
                                "$eq": [
                                    "$group.createdBy",
                                    "?#{#param.id}"
                                ]
                            },
                            {
                                "$eq": [
                                    "$group.discreet",
                                    false
                                ]
                            }
                        ]
                    },
                    {
                        "$or": [
                            {
                                "$gt": [
                                    "$role",
                                    "?#{#param.offset[0]}"
                                ]
                            },
                            {
                                "$and": [
                                    {
                                        "$eq": [
                                            "$role",
                                            "?#{#param.offset[0]}"
                                        ]
                                    },
                                    {
                                        "$lt": [
                                            "$updatedDate",
                                            "?#{#param.offset[1]}"
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    },
    {
        "$sort": {
            "role": 1,
            "updatedDate": -1
        }
    },
    {
        "$limit": "?#{#param.limit}"
    },
    {
        "$replaceRoot": {
            "newRoot": {
                "$mergeObjects": [
                    {
                        "profile": "$$ROOT"
                    },
                    {
                        "role": "$role",
                        "offset": [
                            "$role",
                            "$updatedDate"
                        ]
                    }
                ]
            }
        }
    }
]