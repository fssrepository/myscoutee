[
        {
            "$match": {
                "_id": "?0"
            }
        },
        {
            "$unwind": "$cars"
        },
        {
            "$lookup": {
                "from": "cars",
                "let": { "c_id": "$cars.$id" },
                "pipeline": [
                    {
                        "$match": {
                            "$expr": {
                                "$and": [
                                    { "$eq": ["$status", "A"] },
                                    { "$eq": ["$$c_id", "?1"] }
                                ]
                            }
                        }
                    }
                ],
                "as": "cars"
            }
        },
        {
            "$unwind": "$cars"
        },
        {
            "$replaceRoot": {
                "newRoot": "$cars"
            }
        }
    ]
    