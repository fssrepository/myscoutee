[
        {
            "$match": {
                "_id": "?0"
            }
        },
        {
            "$unwind": "$schools"
        },
        {
            "$lookup": {
                "from": "schools",
                "let": { "s_id": "$schools.$id" },
                "pipeline": [
                    {
                        "$match": {
                            "$expr": {
                                "$and": [
                                    { "$eq": ["$status", "A"] },
                                    { "$eq": ["$$s_id", "?1"] }
                                ]
                            }
                        }
                    }
                ],
                "as": "schools"
            }
        },
        {
            "$unwind": "$schools"
        },
        {
            "$replaceRoot": {
                "newRoot": "$schools"
            }
        }
    ]
    